@using Microsoft.AspNetCore.Http
@{
    // Backend'den (Session) gelen gerçek verileri çekiyoruz.
    // Eğer session boşsa (giriş yapılmamışsa) varsayılan değerler atanır.
    var userName = Context.Session.GetString("UserName") ?? "Misafir";
    var balance = Context.Session.GetString("UserBalance") ?? "0,00";
    var iban = Context.Session.GetString("UserIban") ?? "TR - Hesaplanıyor...";
    
    // Profil ikonu için ismin ilk harfini alıyoruz.
    var firstLetter = !string.IsNullOrEmpty(userName) ? userName.Substring(0, 1).ToUpper() : "A";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A. Bank | Kurumsal İnternet Şubesi</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; overflow: hidden; }
        
        .sidebar-link.active {
            background: rgba(37, 99, 235, 0.15);
            color: #60a5fa;
            border-right: 4px solid #2563eb;
        }
        
        .content-section { display: none; }
        .content-section.active { 
            display: block; 
            animation: slideUp 0.4s ease-out; 
        }

        @@keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body class="bg-[#f1f5f9] text-slate-900">

<div class="flex h-screen">
    <aside class="w-72 bg-[#0f172a] text-white flex flex-col shadow-2xl z-50">
        <div class="p-8">
            <div class="flex items-center space-x-3 group">
                <div class="w-10 h-10 bg-blue-600 rounded-xl flex items-center justify-center shadow-lg shadow-blue-500/20">
                    <span class="text-2xl font-black">A.</span>
                </div>
                <div class="flex flex-col">
                    <span class="text-xl font-bold tracking-tight">BANK</span>
                    <span class="text-[10px] text-blue-400 tracking-[0.2em] font-bold">PREMIUM</span>
                </div>
            </div>
        </div>

        <nav class="flex-1 mt-4" id="sidebar-nav">
            <p class="text-[10px] uppercase tracking-widest text-slate-500 font-bold mb-4 px-8">İşlemler</p>
            
            <button onclick="showSection('dashboard', this)" class="sidebar-link active w-full flex items-center px-8 py-4 text-slate-400 hover:text-white transition-all group">
                <i class="fas fa-chart-pie w-8 text-lg group-hover:scale-110 transition"></i>
                <span class="font-medium">Dashboard</span>
            </button>
            
            <button onclick="showSection('transfer', this)" class="sidebar-link w-full flex items-center px-8 py-4 text-slate-400 hover:text-white transition-all group">
                <i class="fas fa-random w-8 text-lg group-hover:scale-110 transition"></i>
                <span class="font-medium">Para Transferi</span>
            </button>
        </nav>

        <div class="p-6">
            <a href="/Account/Logout" class="w-full block text-center py-3 bg-red-600/10 text-red-500 rounded-xl text-xs font-bold hover:bg-red-600 hover:text-white transition">
                <i class="fas fa-sign-out-alt mr-2"></i> GÜVENLİ ÇIKIŞ
            </a>
        </div>
    </aside>

    <main class="flex-1 flex flex-col relative overflow-hidden">
        
        <header class="h-20 bg-white/70 backdrop-blur-md border-b border-slate-200 px-8 flex justify-between items-center z-40">
            <h2 id="page-title" class="text-xl font-bold text-slate-800">Genel Bakış</h2>
            
            <div class="flex items-center space-x-6">
                <div class="flex items-center space-x-3 pl-6 border-l border-slate-200">
                    <div class="text-right">
                        <p class="text-sm font-bold text-slate-900">@userName</p>
                        <p class="text-[10px] text-blue-600 font-bold uppercase tracking-widest">Gold Member</p>
                    </div>
                    <div class="w-12 h-12 bg-gradient-to-tr from-blue-600 to-indigo-600 rounded-2xl flex items-center justify-center shadow-lg text-white font-bold">
                        @firstLetter
                    </div>
                </div>
            </div>
        </header>

        <div class="flex-1 overflow-y-auto p-8 bg-[#f8fafc]" id="main-scroll-container">
            
            <section id="dashboard" class="content-section active space-y-8">
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <div class="lg:col-span-2 bg-gradient-to-r from-blue-700 via-blue-800 to-indigo-900 text-white p-10 rounded-[2.5rem] shadow-2xl relative overflow-hidden">
                        <div class="relative z-10">
                            <p class="text-blue-200 text-sm font-medium uppercase tracking-widest">Toplam Kullanılabilir Bakiye</p>
                            <h3 class="text-5xl font-black mt-4">₺@balance</h3>
                            <div class="mt-10 flex gap-4">
                                <span class="bg-white/10 px-4 py-2 rounded-xl text-xs font-mono">IBAN: @iban</span>
                            </div>
                        </div>
                        <i class="fas fa-shield-halved absolute right-10 bottom-10 text-9xl opacity-10"></i>
                    </div>
                    
                    <div class="bg-white p-8 rounded-[2.5rem] border border-slate-200 shadow-sm flex flex-col justify-between">
                        <p class="text-slate-500 text-sm font-bold uppercase tracking-tighter">Hızlı İşlem</p>
                        <button class="w-full py-4 bg-slate-900 text-white rounded-2xl font-bold hover:bg-slate-800 transition">Hesap Özeti</button>
                    </div>
                </div>
            </section>

            <section id="transfer" class="content-section max-w-4xl">
                <div class="bg-white p-10 rounded-[2.5rem] border border-slate-200 shadow-xl">
                    <h3 class="text-2xl font-bold mb-8 text-slate-800">Hızlı Para Transferi</h3>
                    <form action="/Home/ProcessTransfer" method="post">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <div class="space-y-6">
                                <div>
                                    <label class="block text-xs font-black text-slate-400 uppercase mb-2">Alıcı IBAN</label>
                                    <input type="text" name="receiverIban" placeholder="TR00 0000..." class="w-full p-4 rounded-2xl bg-slate-50 border border-slate-200 font-mono focus:ring-2 focus:ring-blue-500 outline-none">
                                </div>
                            </div>
                            <div class="space-y-6">
                                <div>
                                    <label class="block text-xs font-black text-slate-400 uppercase mb-2">Tutar</label>
                                    <input type="number" name="amount" placeholder="0.00" class="w-full p-4 rounded-2xl bg-slate-50 border border-slate-200 font-bold text-xl focus:ring-2 focus:ring-blue-500 outline-none">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="mt-10 w-full bg-blue-600 hover:bg-blue-700 text-white py-5 rounded-2xl font-black shadow-2xl transition-all">TRANSFERİ GERÇEKLEŞTİR</button>
                    </form>
                </div>
            </section>

        </div>
    </main>
</div>

<script src="~/js/app.js"></script> </body>
</html>